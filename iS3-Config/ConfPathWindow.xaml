<Window x:Class="iS3.Config.ConfPathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iS3.Config"
        mc:Ignorable="d"
        Title="iS3 Config v0.1" Height="450" Width="800">
    <Grid>
        <Button Content="iS3 Location..." HorizontalAlignment="Left" Margin="37,111,0,0" VerticalAlignment="Top" Width="200" Height="44" FontSize="18" Click="iS3LocBtn_Click"/>
        <Button Content="my Data Location..." HorizontalAlignment="Left" Margin="37,177,0,0" VerticalAlignment="Top" Width="200" Height="44" FontSize="18" Click="myDatBtn_Click"/>
        <Label x:Name="iS3Labl" Content="iS3 Path" HorizontalAlignment="Left" Height="32" Margin="260,116,24,0" VerticalAlignment="Top" Width="Auto" FontSize="18" />
        <Label x:Name="myLabl" Content="my Data Path" HorizontalAlignment="Left" Height="36" Margin="260,177,24,0" VerticalAlignment="Top" Width="Auto" FontSize="18"/>
        <Button Content="Start configuration" HorizontalAlignment="Left" Margin="260,305,0,0" VerticalAlignment="Top" Width="253" FontSize="24" Height="52" Click="startBtn_Click"/>

    </Grid>
</Window>
